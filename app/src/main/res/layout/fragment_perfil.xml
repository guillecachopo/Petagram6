<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.mascota.MascotaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/civPerfil"
            android:layout_width="@dimen/circularview"
            android:layout_height="@dimen/circularview"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/layout_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="@dimen/circular_image_border_width"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/tvPetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/developer_name_text_size" />

        <View
            android:id="@+id/vbarra"
            android:layout_width="match_parent"
            android:layout_height="@dimen/perfil_barra"
            android:background="@color/colorAccent"
            ></View>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rvMainRecyclerView" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabSubir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/layout_horizontal_margin"
        android:background="@color/colorTextIcons"
        android:src="@drawable/ic_camara"
        android:elevation="@dimen/elevacion_floating_action_button" />

</android.support.design.widget.CoordinatorLayout>